@model Product

<h3>Product @Model.Name</h3>

<table class="table">
   <tr>
       <th>Product ID</th>
       <th>Name</th>
       <th align="right">Price</th>
       <th align="right">OnSale</th>
       <th align="right">Stock Level</th>
       <th align="right">Category ID</th>

  </tr>

   <tr>
       <td>@Model.ProductID</td>
       <td>@Model.Name</td>
       <td>@Model.Price</td>
       <td>@Model.OnSale</td>
       <td>@Model.StockLevel</td>
       <td>@Model.CategoryID</td>
   </tr>
</table>

    <div style="display: block">
        <a href="/Product/UpdateProduct/@Model.ProductID">Update this Product</a>
    </div>'